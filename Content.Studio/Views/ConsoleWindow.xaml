<ad:DockableContent
    x:Class="Willcraftia.Content.Studio.Views.ConsoleWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ad="clr-namespace:AvalonDock;assembly=AvalonDock"
    xmlns:wcontrols="clr-namespace:Willcraftia.Win.Framework.Controls;assembly=Willcraftia.Win.Framework"
    xmlns:local="clr-namespace:Willcraftia.Content.Studio.Views"
    Height="200" Width="800">

    <DockPanel>
        
        <Menu DockPanel.Dock="Top"
              Name="MainMenu">
            <MenuItem Header="_View">
                <MenuItem Header="_Clear"
                          Name="ClearMenuItem"
                          Click="ClearMenuItem_Click"/>
            </MenuItem>
        </Menu>
        <Grid>
            <wcontrols:Console Name="Console"
                               ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto"
                               FontFamily="MS Gothic" FontSize="12"/>
        </Grid>

    </DockPanel>

</ad:DockableContent>
